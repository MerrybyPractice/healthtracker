<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //from https://github.com/sayyam/carouselview as part of implementing their carousel view
    library

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        app:fillColor="#FFFFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/carousel_Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/finger_text"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="53dp"
        android:text="Start? "
        app:layout_constraintBaseline_toBaselineOf="@+id/finger_Button"
        app:layout_constraintEnd_toStartOf="@+id/finger_Button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/finger_Button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="212dp"
        android:onClick="onButtonClick"
        android:text="Finger Workout!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/finger_text"
        app:layout_constraintTop_toBottomOf="@+id/carousel_Caption" />

    <TextView
        android:id="@+id/carousel_Caption"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="311dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carouselView" />

</androidx.constraintlayout.widget.ConstraintLayout>